/*******************************************************************************************************************
	Data coming in from the vertex shader
*******************************************************************************************************************/
struct PixelOutput
{
    float4 position : SV_POSITION;
    float4 color	: COLOR;
};


/*******************************************************************************************************************
	Main Function
*******************************************************************************************************************/
float4 PixelMain(PixelOutput pixelOutput) : SV_TARGET
{
	//-------------------------------------------- Send the data to the screen
    return pixelOutput.color;
}
