/*******************************************************************************************************************
	Global data coming in from the CPU
*******************************************************************************************************************/
Texture2D 		shaderTexture;
SamplerState 	SampleType;


/*******************************************************************************************************************
	Data coming in from the vertex shader
*******************************************************************************************************************/
struct PixelOutput
{
    float4 position 	: SV_POSITION;
	float2 textureCoord	: TEXCOORD0;
};


/*******************************************************************************************************************
	Main Function
*******************************************************************************************************************/
float4 PixelMain(PixelOutput pixelOutput) : SV_TARGET
{
	float4 textureColor = shaderTexture.Sample(SampleType, pixelOutput.textureCoord);

	//-------------------------------------------- Send the data to the screen
    return textureColor;
}
